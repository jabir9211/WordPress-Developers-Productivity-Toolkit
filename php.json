    "WP_Query Loop": {
        "prefix": "jr_query",
        "body": [
            "$the_query = new WP_Query( $args );",
            "",
            "// The Loop",
            "if ( $the_query->have_posts() ) :",
            "    while ( $the_query->have_posts() ) : $the_query->the_post();",
            "        // Do Stuff",
            "    endwhile;",
            "endif;",
            "",
            "// Reset Post Data",
            "wp_reset_postdata();"
        ],
